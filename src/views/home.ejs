<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/5/w3.css">

<body>

    <title>Home page</title>
    </head>

    <body>
        <ul>
            <li><a href="/">Rider</a></li>
            <li><a href="/creat">Team</a></li>
            <li><a href="/upload">Calender</a></li>
            <li><a href="/upload">Results</a></li>
            
        </ul>
        <div class="table-container">

            <div class="title">List users</div>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>Name</th>
                        <th>IDteam</th>
                        <th>Picture</th>
                        <th>Points</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <% listUsers.forEach(function(Rider) { %>
                    <tr>
                        <td>
                            <%= Rider.idrider %>
                        </td>
                        <td>
                            <%= Rider.name %>
                        </td>
                        <td>
                            <%= Rider.idTeam %>
                        </td>
                        <td>
                            <%= Rider.pictureId%>
                        </td>
                        <td>
                            <%= Rider.points %>
                        </td>
                        <td>
                            <a href="/update/<%= Rider.id%>">Edit</a>
                            <form action="/delete-user/<%= Rider.id%>" method="POST">
                                <button >Delete</button>
                            </form>
                        </td>
                    </tr>
                    <%});%>
            </table>
        </div>
        </div>

    </body>

</html>